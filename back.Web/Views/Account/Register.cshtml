@model back.Web.Models.RegisterNewUserViewModel
@{
    ViewData["Title"] = "Register";
}

<h1>Register</h1>

<div class="row">

    <form method="post">

        <div asp-validation-summary="ModelOnly"></div>

        <div class="form-group">
            <label asp-for="FirtsName">nombre</label>
            <input class="form-control" asp-for="FirtsName" />
        </div>
        <div class="form-group">
            <label asp-for="LastName">apellido</label>
            <input class="form-control" asp-for="LastName" />
        </div>
        <div class="form-group">
            <label asp-for="Username">Username</label>
            <input class="form-control" asp-for="Username" />
        </div>
        <div class="form-group">
            <label asp-for="Password">Password</label>
            <input class="form-control" asp-for="Password" />
        </div>
        <div class="form-group">
            <label asp-for="Confirm">Confirm</label>
            <input class="form-control" asp-for="Confirm" />
        </div>
        <div class="form-group">
            <input type="submit" value="Registrar" class="btn btn-primary"/>
        </div>

    </form>
</div>
@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}

}
